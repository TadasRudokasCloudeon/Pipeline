{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "PPName": {
            "type": "string",
			"defaultValue": "VMtest",
            "minLength": 1
        },
        "PPAdminUserName": {
            "type": "string",
			"defaultValue": "AzureUser",
            "minLength": 1
        },
        "PPAdminPassword": {
            "type": "securestring",
			"defaultValue": "paspADFSdpapsdasd55236"
        },
        "PPUbuntuOSVersion": {
            "type": "string",
            "defaultValue": "14.04.2-LTS",
            "allowedValues": [
                "12.04.5-LTS",
                "14.04.2-LTS",
                "15.04"
            ]
        },
        "ppstorageType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_ZRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Premium_LRS"
            ]
        },
        "PPVmSize": {
            "type": "string",
            "defaultValue": "Standard_DS1_v2",
            "allowedValues": [
                "Standard_DS1_v2",
                "Standard_DS2_v2",
                "Standard_DS3_v2"
            ]
        }
    },
    "resources": [
        {
            "name": "[variables('PPNicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', 'vnet')]"
            ],
            "tags": {
                "displayName": "PPNic"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('PPSubnetRef')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('PPName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "[concat('Microsoft.Storage/storageAccounts/', variables('ppstorageName'))]",
                "[concat('Microsoft.Network/networkInterfaces/', variables('PPNicName'))]"
            ],
            "tags": {
                "displayName": "PP"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('PPVmSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('PPName')]",
                    "adminUsername": "[parameters('PPAdminUsername')]",
                    "adminPassword": "[parameters('PPAdminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('PPImagePublisher')]",
                        "offer": "[variables('PPImageOffer')]",
                        "sku": "[parameters('PPUbuntuOSVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "PPOSDisk",
                        "vhd": {
                            "uri": "[concat('http://', variables('ppstorageName'), '.blob.core.windows.net/', variables('PPStorageAccountContainerName'), '/', variables('PPOSDiskName'), '.vhd')]"
                        },
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('PPNicName'))]"
                        }
                    ]
                }
            }
        },
        {
            "name": "[variables('ppstorageName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [],
            "tags": {
                "displayName": "ppstorage"
            },
            "properties": {
                "accountType": "[parameters('ppstorageType')]"
            }
        },
        {
            "name": "vnet",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [],
            "tags": {
                "displayName": "vnet"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('vnetPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('vnetSubnet1Name')]",
                        "properties": {
                            "addressPrefix": "[variables('vnetSubnet1Prefix')]"
                        }
                    },
                    {
                        "name": "[variables('vnetSubnet2Name')]",
                        "properties": {
                            "addressPrefix": "[variables('vnetSubnet2Prefix')]"
                        }
                    }
                ]
            }
        }
    ],
    "variables": {
        "PPImagePublisher": "Canonical",
        "PPImageOffer": "UbuntuServer",
        "PPOSDiskName": "PPOSDisk",
        "PPVmSize": "Standard_D1",
        "PPVnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'vnet')]",
        "PPSubnetRef": "[concat(variables('PPVnetID'), '/subnets/', variables('vnetSubnet1Name'))]",
        "PPStorageAccountContainerName": "vhds",
        "PPNicName": "[concat(parameters('PPName'), 'NetworkInterface')]",
        "ppstorageName": "[concat('ppstorage', uniqueString(resourceGroup().id))]",
        "vnetPrefix": "10.0.0.0/16",
        "vnetSubnet1Name": "Subnet-1",
        "vnetSubnet1Prefix": "10.0.0.0/24",
        "vnetSubnet2Name": "Subnet-2",
        "vnetSubnet2Prefix": "10.0.1.0/24"
    }
}