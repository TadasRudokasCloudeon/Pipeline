{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "TestukasName": {
            "type": "string",
            "minLength": 1,
			"defaultValue": "testukovardas"
        },
        "TestukasAdminUserName": {
            "type": "string",
            "minLength": 1,
			"defaultValue": "testukovardas"
        },
        "TestukasAdminPassword": {
            "type": "securestring",
			"defaultValue": "Testukas15936325484"
        },
        "TestukasUbuntuOSVersion": {
            "type": "string",
            "defaultValue": "14.04.2-LTS",
            "allowedValues": [
                "12.04.5-LTS",
                "14.04.2-LTS",
                "15.04"
            ]
        },
        "testukasType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_ZRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Premium_LRS"
            ]
        }
    },
    "resources": [
        {
            "name": "[variables('TestukasNicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', 'vnet')]"
            ],
            "tags": {
                "displayName": "TestukasNic"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('TestukasSubnetRef')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('TestukasName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [
                "[concat('Microsoft.Storage/storageAccounts/', variables('testukasName'))]",
                "[concat('Microsoft.Network/networkInterfaces/', variables('TestukasNicName'))]"
            ],
            "tags": {
                "displayName": "Testukas"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[variables('TestukasVmSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('TestukasName')]",
                    "adminUsername": "[parameters('TestukasAdminUsername')]",
                    "adminPassword": "[parameters('TestukasAdminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('TestukasImagePublisher')]",
                        "offer": "[variables('TestukasImageOffer')]",
                        "sku": "[parameters('TestukasUbuntuOSVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "TestukasOSDisk",
                        "vhd": {
                            "uri": "[concat('http://', variables('testukasName'), '.blob.core.windows.net/', variables('TestukasStorageAccountContainerName'), '/', variables('TestukasOSDiskName'), '.vhd')]"
                        },
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('TestukasNicName'))]"
                        }
                    ]
                }
            }
        },
        {
            "name": "[variables('testukasName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [],
            "tags": {
                "displayName": "testukas"
            },
            "properties": {
                "accountType": "[parameters('testukasType')]"
            }
        },
        {
            "name": "vnet",
            "type": "Microsoft.Network/virtualNetworks",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-06-15",
            "dependsOn": [],
            "tags": {
                "displayName": "vnet"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('vnetPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('vnetSubnet1Name')]",
                        "properties": {
                            "addressPrefix": "[variables('vnetSubnet1Prefix')]"
                        }
                    },
                    {
                        "name": "[variables('vnetSubnet2Name')]",
                        "properties": {
                            "addressPrefix": "[variables('vnetSubnet2Prefix')]"
                        }
                    }
                ]
            }
        }
    ],
    "variables": {
        "TestukasImagePublisher": "Canonical",
        "TestukasImageOffer": "UbuntuServer",
        "TestukasOSDiskName": "TestukasOSDisk",
        "TestukasVmSize": "Standard_D1",
        "TestukasVnetID": "[resourceId('Microsoft.Network/virtualNetworks', 'vnet')]",
        "TestukasSubnetRef": "[concat(variables('TestukasVnetID'), '/subnets/', variables('vnetSubnet1Name'))]",
        "TestukasStorageAccountContainerName": "vhds",
        "TestukasNicName": "[concat(parameters('TestukasName'), 'NetworkInterface')]",
        "testukasName": "[concat('testukas', uniqueString(resourceGroup().id))]",
        "vnetPrefix": "10.0.0.0/16",
        "vnetSubnet1Name": "Subnet-1",
        "vnetSubnet1Prefix": "10.0.0.0/24",
        "vnetSubnet2Name": "Subnet-2",
        "vnetSubnet2Prefix": "10.0.1.0/24"
    }
}